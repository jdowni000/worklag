[all:vars]
allocation_node_count={{ ocpinventory.json.nodes | length }}


[bastion]
{{ bastion_machine }} ansible_ssh_user=root bmc_address=mgmt-{{ bastion_machine }}

[bastion:vars]
bmc_user={{ bmc_user }}
bmc_password={{ bmc_password }}


[hypervisor]
{% for hypervisor in ocpinventory_hypervisor_nodes %}
{{ hypervisor }} ansible_ssh_user=root bmc_address=mgmt-{{hypervisor}}
{% endfor %}
